<%- include('partials/header', { title: 'Verify Barcode' }) %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="fas fa-check-circle me-2"></i>Verify Barcode Access</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/verify">
                        <div class="mb-4">
                            <label for="scannerInput" class="form-label">
                                <strong>Scan Barcode</strong>
                            </label>
                            <input type="text" class="form-control form-control-lg scanner-input" 
                                   id="scannerInput" name="code" placeholder="Scan barcode or enter code manually" 
                                   value="<%= scannedCode || '' %>" required autocomplete="off">
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Point your barcode scanner at this field and scan, or type the code manually.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check me-2"></i>Verify Access
                            </button>
                        </div>
                    </form>

                    <% if (result) { %>
                        <hr class="my-4">
                        
                        <div class="alert <%= result.access === 'granted' ? 'access-granted' : 'access-denied' %>">
                            <div class="d-flex align-items-center">
                                <i class="fas <%= result.access === 'granted' ? 'fa-check-circle' : 'fa-times-circle' %> fa-3x me-3"></i>
                                <div>
                                    <h4 class="alert-heading mb-1">
                                        <%= result.access === 'granted' ? 'ACCESS GRANTED' : 'ACCESS DENIED' %>
                                    </h4>
                                    <p class="mb-1"><%= result.message %></p>
                                    <% if (result.issuedTo) { %>
                                        <p class="mb-0"><strong>Issued To:</strong> <%= result.issuedTo %></p>
                                    <% } %>
                                    <% if (result.purpose) { %>
                                        <p class="mb-0"><strong>Purpose:</strong> <%= result.purpose %></p>
                                    <% } %>
                                    <% if (result.usedAt) { %>
                                        <p class="mb-0"><strong>Access Time:</strong> <%= result.usedAt.toLocaleString() %></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/verify" class="btn btn-primary">
                                <i class="fas fa-redo me-2"></i>Verify Another Barcode
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>

            <% if (result && scannedCode) { %>
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Scan Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Scanned Code:</strong>
                                <p class="font-monospace"><%= scannedCode %></p>
                            </div>
                            <div class="col-md-6">
                                <strong>Verification Time:</strong>
                                <p><%= new Date().toLocaleString() %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<%- include('partials/header', { title: title || 'Error' }) %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i><%= title || 'Error' %></h3>
                </div>
                <div class="card-body text-center py-5">
                    <i class="fas fa-exclamation-circle fa-4x text-danger mb-4"></i>
                    <h4 class="text-danger mb-3"><%= message || 'An unexpected error occurred' %></h4>
                    <p class="text-muted mb-4">Please try again or contact system administrator if the problem persists.</p>
                    <div class="d-grid gap-2 d-md-block">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>